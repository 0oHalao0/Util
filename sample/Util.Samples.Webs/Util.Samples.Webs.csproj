<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <UserSecretsId>aspnet-Util.Samples.Webs-D0551EBC-0589-40AD-ADC2-A88CA4609632</UserSecretsId>
    <Authors>何镇汐</Authors>
    <Company>何镇汐</Company>
    <PackageReleaseNotes></PackageReleaseNotes>
    <PackageProjectUrl></PackageProjectUrl>
    <Description>Util应用框架Web示例项目</Description>
    <!--阻止ts自动编译-->
    <TypeScriptCompileBlocked>true</TypeScriptCompileBlocked>
    <TypeScriptToolsVersion>Latest</TypeScriptToolsVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Services\Configs\**" />
    <Content Remove="Services\Configs\**" />
    <EmbeddedResource Remove="Services\Configs\**" />
    <None Remove="Services\Configs\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Typings\util\common\message.ts" />
    <None Remove="Typings\util\common\webapi.ts" />
    <None Remove="Typings\util\core\pager-list.ts" />
    <None Remove="Typings\util\core\query-parameter.ts" />
    <None Remove="Typings\util\core\result.ts" />
    <None Remove="Typings\util\util.module.ts" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Exceptionless.AspNetCore" Version="4.2.1982" />
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.3" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.EntityFrameworkCore.Tools.DotNet" Version="2.0.0" />
    <DotNetCliToolReference Include="Microsoft.Extensions.SecretManager.Tools" Version="2.0.0" />
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Util.Applications\06-Util.Applications.csproj" />
    <ProjectReference Include="..\..\src\Util.Biz\01-Util.Biz.csproj" />
    <ProjectReference Include="..\..\src\Util.Datas\05-Util.Datas.csproj" />
    <ProjectReference Include="..\..\src\Util.Events\04-Util.Events.csproj" />
    <ProjectReference Include="..\..\src\Util.Logs\03-Util.Logs.csproj" />
    <ProjectReference Include="..\..\src\Util.Security\02-Util.Security.csproj" />
    <ProjectReference Include="..\..\src\Util.Tools.QrCode\01-Util.Tools.QrCode.csproj" />
    <ProjectReference Include="..\..\src\Util.Ui.Angular\03-Util.Ui.Angular.csproj" />
    <ProjectReference Include="..\..\src\Util.Webs\07-Util.Webs.csproj" />
    <ProjectReference Include="..\..\src\Util\01-Util.csproj" />
    <ProjectReference Include="..\..\test\Util.Datas.Tests.Integration\02-Util.Datas.Tests.Integration.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="nlog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Models\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Views\Home\Admin\Brand.cshtml" />
    <None Include="Views\Home\Admin\Footer.cshtml" />
    <None Include="Views\Home\Admin\Header.cshtml" />
    <None Include="Views\Home\Admin\Header\Notification.cshtml" />
    <None Include="Views\Home\Admin\Header\User.cshtml" />
    <None Include="Views\Home\Admin\sidenav.cshtml" />
    <None Include="Views\Home\Admin\sidenav\Item.cshtml" />
    <None Include="Views\Public\SearchMenu.cshtml" />
    <None Include="wwwroot\css\common\layout\header\_toolbar-help.scss" />
    <None Include="wwwroot\css\common\layout\header\_toolbar-notification.scss" />
    <None Include="wwwroot\css\common\layout\header\_toolbar-user.scss" />
    <None Include="wwwroot\css\common\layout\sidenav\_item.scss" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Include="Typings\util\common\message.ts" />
    <TypeScriptCompile Include="Typings\util\core\component-base.ts" />
    <TypeScriptCompile Include="Typings\util\angular\router-helper.ts" />
    <TypeScriptCompile Include="Typings\util\common\webapi.ts" />
    <TypeScriptCompile Include="Typings\util\core\pager-list.ts" />
    <TypeScriptCompile Include="Typings\util\core\query-parameter.ts" />
    <TypeScriptCompile Include="Typings\util\core\result.ts" />
    <TypeScriptCompile Include="Typings\util\material\table-wrapper.component.ts" />
    <TypeScriptCompile Include="Typings\util\util.module.ts" />
  </ItemGroup>

  <!-- Debug调试模式打包第三方框架 -->
  <Target Name="Debug_RunWebpack" BeforeTargets="Build" Condition=" '$(Configuration)' == 'Debug' And !Exists('wwwroot\dist') ">
    <!-- 检测node js是否安装 -->
    <Exec Command="node -v" ContinueOnError="true">
      <Output TaskParameter="ExitCode" PropertyName="ErrorCode" />
    </Exec>
    <Error Condition="'$(ErrorCode)' != '0'" Text="必须安装Node.js" />
    <!-- 打包 -->
    <Message Importance="high" Text="Webpack开始执行webpack.config.vendor.js,打包第三方前端框架..." />
    <Exec Command="node node_modules/webpack/bin/webpack.js --config webpack.config.vendor.js" />
    <Message Importance="high" Text="Webpack开始执行webpack.config.util.js,打包util脚本库..." />
    <Exec Command="node node_modules/webpack/bin/webpack.js --config webpack.config.util.js" />
    <Message Importance="high" Text="Webpack开始执行webpack.config.js,打包项目..." />
    <Exec Command="node node_modules/webpack/bin/webpack.js" />
  </Target>

  <!-- Release模式打包 -->
  <Target Name="Release_RunWebpack" BeforeTargets="Build" Condition=" '$(Configuration)' == 'Release'">
    <Message Importance="high" Text="开始安装npm包..." />
    <Exec Command="npm install" />
    <Message Importance="high" Text="Webpack开始打包..." />
    <Exec Command="node node_modules/webpack/bin/webpack.js --config webpack.config.vendor.js --env.prod" />
    <Exec Command="node node_modules/webpack/bin/webpack.js --config webpack.config.util.js --env.prod" />
    <Exec Command="node node_modules/webpack/bin/webpack.js --env.prod" />
  </Target>

  <!-- 发布阶段打包 -->
  <Target Name="Publish_RunWebpack" AfterTargets="ComputeFilesToPublish">
    <ItemGroup>
      <DistFiles Include="wwwroot\dist\**;" />
      <ResolvedFileToPublish Include="@(DistFiles->'%(FullPath)')" Exclude="@(ResolvedFileToPublish)">
        <RelativePath>%(DistFiles.Identity)</RelativePath>
        <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      </ResolvedFileToPublish>
    </ItemGroup>
  </Target>
  
</Project>
