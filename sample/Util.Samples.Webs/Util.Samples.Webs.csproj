<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <UserSecretsId>aspnet-Util.Samples.Webs-D0551EBC-0589-40AD-ADC2-A88CA4609632</UserSecretsId>
    <Authors>何镇汐</Authors>
    <Company>何镇汐</Company>
    <PackageReleaseNotes></PackageReleaseNotes>
    <PackageProjectUrl></PackageProjectUrl>
    <Description>Util应用框架Web示例项目</Description>
    <TypeScriptCompileBlocked>true</TypeScriptCompileBlocked>
    <TypeScriptToolsVersion>Latest</TypeScriptToolsVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Typings\app\**" />
    <Content Remove="Typings\app\**" />
    <EmbeddedResource Remove="Typings\app\**" />
    <None Remove="Typings\app\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Typings\app.component.ts" />
    <None Remove="Typings\app.module.ts" />
    <None Remove="Typings\boot.browser.ts" />
    <None Remove="Typings\main.ts" />
    <None Remove="Typings\polyfills.ts" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Exceptionless.AspNetCore" Version="4.0.1955" />
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.EntityFrameworkCore.Tools.DotNet" Version="2.0.0" />
    <DotNetCliToolReference Include="Microsoft.Extensions.SecretManager.Tools" Version="2.0.0" />
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Util.Applications\06-Util.Applications.csproj" />
    <ProjectReference Include="..\..\src\Util.Biz\Util.Biz.csproj" />
    <ProjectReference Include="..\..\src\Util.Datas\05-Util.Datas.csproj" />
    <ProjectReference Include="..\..\src\Util.Events\04-Util.Events.csproj" />
    <ProjectReference Include="..\..\src\Util.Logs\03-Util.Logs.csproj" />
    <ProjectReference Include="..\..\src\Util.Security\02-Util.Security.csproj" />
    <ProjectReference Include="..\..\src\Util\01-Util.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Areas\Logs\Models\" />
    <Folder Include="wwwroot\dist\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="wwwroot\app.component.html" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Include="Typings\app.component.ts" />
    <TypeScriptCompile Include="Typings\app.module.ts" />
    <TypeScriptCompile Include="Typings\main.ts" />
    <TypeScriptCompile Include="Typings\polyfills.ts" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="nlog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <Target Name="DebugRunWebpack" BeforeTargets="Build" Condition=" '$(Configuration)' == 'Debug'">
    <Exec Command="node --version" ContinueOnError="true">
      <Output TaskParameter="ExitCode" PropertyName="ErrorCode" />
    </Exec>
    <Error Condition="'$(ErrorCode)' != '0'" Text="必须安装Node.js" />
    <Message Importance="high" Text="Webpack开始打包" />
    <Exec Command="npm run dev" />
    <!--<Exec Command="npm run dev" />-->
  </Target>

  <Target Name="PublishRunWebpack" AfterTargets="ComputeFilesToPublish">
    <Exec Command="npm install" />
    <Exec Command="node node_modules/webpack/bin/webpack.js" />

    <ItemGroup>
      <DistFiles Include="wwwroot\dist\**;" />
      <ResolvedFileToPublish Include="@(DistFiles->'%(FullPath)')" Exclude="@(ResolvedFileToPublish)">
        <RelativePath>%(DistFiles.Identity)</RelativePath>
        <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      </ResolvedFileToPublish>
    </ItemGroup>
  </Target>

  <ProjectExtensions><VisualStudio><UserProperties /></VisualStudio></ProjectExtensions>

</Project>
